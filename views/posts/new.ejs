<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Post</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/posts"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="post[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Upload Images</label>
        <input
          class="form-control"
          type="file"
          name="image"
          multiple
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="postText">Write Something</label>
        <textarea
          class="form-control"
          type="text"
          id="postText"
          name="post[postText]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Post</button>
      </div>
    </form>
    <a href="/posts">All Posts</a>
  </div>
</div>
