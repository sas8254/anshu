<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Post</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/posts/<%=post._id%>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
      required
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="post[title]"
          value="<%=post.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Add Images</label>
        <input class="form-control" type="file" name="image" id="image" multiple>
      </div>
      <div class="mb-3">
        <label class="form-label" for="postText">Write something</label>
        <textarea
          class="form-control"
          type="text"
          id="postText"
          name="post[postText]"
          required
        >
<%=post.postText%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <% post.images.forEach( (img, i)=>{ %>
          <img class="img-thumbnail " src="<%=img.thumbnail%>" alt="">
          <div class="form-check ">
            <input class="form-check-input" type="checkbox" value="<%=img.filename%>" name="deleteImages[]" id="image-<%=i%>">
            <label class="form-check-label" for="image-<%=i%>">
              Delete
            </label>
          </div>
        <% }) %>
  
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Edit Post</button>
      </div>
    </form>
    <a href="/posts/<%=post._id%> ">Back to Post</a>
  </div>
</div>
